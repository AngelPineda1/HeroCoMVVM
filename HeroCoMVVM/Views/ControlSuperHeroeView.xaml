<UserControl x:Class="HeroCoMVVM.Views.ControlSuperHeroeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HeroCoMVVM.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel  Height="100" Width="100">
        <Image   Source="{Binding Imagen}" Width="80" Height="80"></Image>
        <TextBlock Text="{Binding NombreVideojuego}" TextAlignment="Center" FontSize="15" TextWrapping="Wrap"></TextBlock>
    </StackPanel>
</UserControl>
